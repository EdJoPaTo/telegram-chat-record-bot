{
	"name": "telegram-chat-record-bot",
	"private": true,
	"version": "3.0.4",
	"description": "A Telegram Bot to record messages in a given chat for a period of time",
	"license": "MIT",
	"repository": "EdJoPaTo/telegram-chat-record-bot",
	"author": {
		"name": "EdJoPaTo",
		"email": "telegram-chat-record-bot@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"start": "node --enable-source-maps source/telegram-chat-record-bot.ts",
		"test": "tsc && xo"
	},
	"type": "module",
	"engines": {
		"node": ">=24"
	},
	"devEngines": {
		"packageManager": {
			"name": "npm"
		}
	},
	"dependencies": {
		"@edjopato/datastore": "^0.7.0",
		"@grammyjs/i18n": "^1.0.1",
		"grammy": "^1.20.3",
		"telegraf-middleware-console-time": "^3.0.0"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"typescript": "^5.9.3",
		"xo": "^1.2.3"
	},
	"xo": {
		"rules": {
			"@typescript-eslint/naming-convention": "off",
			"unicorn/prevent-abbreviations": "off"
		}
	}
}
