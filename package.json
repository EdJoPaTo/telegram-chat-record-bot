{
	"name": "telegram-chat-record-bot",
	"private": true,
	"version": "1.1.3",
	"description": "A Telegram Bot to record messages in a given chat for a period of time",
	"license": "MIT",
	"repository": "EdJoPaTo/telegram-chat-record-bot",
	"author": {
		"name": "EdJoPaTo",
		"email": "telegram-chat-record-bot@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"start": "node --loader ts-node/esm source/index.ts",
		"test": "tsc --sourceMap && xo"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"dependencies": {
		"@edjopato/datastore": "^0.4.0",
		"@grammyjs/i18n": "^0.5.0",
		"grammy": "^1.2.0",
		"source-map-support": "^0.5.16",
		"telegraf-middleware-console-time": "^2.0.0"
	},
	"devDependencies": {
		"@grammyjs/types": "^2.2.4",
		"@sindresorhus/tsconfig": "^2.0.0",
		"@types/node": "^16.4.9",
		"del-cli": "^4.0.0",
		"ts-node": "^10.0.0",
		"typescript": "^4.2.3",
		"xo": "^0.47.0"
	},
	"xo": {
		"semicolon": false,
		"rules": {
			"@typescript-eslint/naming-convention": "off",
			"ava/no-ignored-test-files": "off",
			"node/prefer-global/process": "off",
			"unicorn/prefer-node-protocol": "off",
			"import/extensions": [
				"error",
				"ignorePackages"
			]
		}
	}
}
